<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Splash">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#191919"
        android:id="@+id/title"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/help1"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:paddingStart="10dp"
            android:src="@drawable/back"
            android:background="#191919"
            app:rippleColor="@color/g_blue100"/>
        <TextView
            android:id="@+id/idTVHeading"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:text="Tips"
            android:textColor="@color/g_line"
            android:textSize="40dp"
            android:textAlignment="center"
            android:textStyle="bold"
            style="@style/editText"
            android:fontFamily="sans-serif-condensed-medium"
            android:background="#191919"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="221dp"
        android:layout_height="255dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/help"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:elevation="20dp"/>

    <TextView
        android:id="@+id/textView"
        style="@style/editText"
        android:layout_width="342dp"
        android:layout_height="97dp"
        android:text="Tips: Tap on the detail adapter to update it, and press long on it to delete the adapter. "
        app:layout_constraintBottom_toTopOf="@+id/tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.096"
        android:elevation="20dp"/>

    <TextView
        android:id="@+id/tv"
        style="@style/editText"
        android:layout_width="342dp"
        android:layout_height="97dp"
        android:text="Tips: You can't save two details with same ID no. You will have to delete or completer the task before you can use its ID"
        app:layout_constraintBottom_toTopOf="@+id/tv1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="1.0"
        android:elevation="20dp"/>

    <TextView
        android:id="@+id/tv1"
        style="@style/editText"
        android:layout_width="342dp"
        android:layout_height="97dp"
        android:text="Tips: Make sure you have your notification permissions on for the app."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv"
        app:layout_constraintVertical_bias="1.0"
        android:elevation="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>